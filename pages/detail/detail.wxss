swiper-item {
  text-align: center;
}

swiper image {
 width: 100%;
 height: 100%;
}

.profiles-swiper {
  height: 450rpx;
}

#intro {
  display: flex;
  flex-direction: column;
  padding-left: 22rpx;
  padding-right: 22rpx;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  align-content:center;
  justify-content:space-around;
}

#title {
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
  margin-bottom: 16rpx;
}

#title text {
  font-family: sans-serif;
  font-size: 34rpx;
}

#data {
  display: flex;
  flex-direction: row;
  justify-content:space-around;
}

#price {
  display: flex;
  flex-direction: row;
}

#price image {
  width: 34rpx;
  height: 34rpx;
}

#price text {
  font-size: 24rpx;
  color: #46B3FB;
}

#location {
  display: flex;
  flex-direction: row;
}

#location image {
  width: 34rpx;
  height: 34rpx;
}

#location text {
  font-size: 24rpx;
  color: #888888;
}

#timeModified {
  display: flex;
  flex-direction: row;
}

#timeModified image {
  width: 34rpx;
  height: 34rpx;
}

#timeModified text {
  font-size: 24rpx;
  color: #888888;
}

#description {
  display: flex;
  flex-direction: column;
  padding-left: 22rpx;
  padding-right: 22rpx;
  align-content:center;
  justify-content:space-around;
}

#contact {
  display: flex;
  flex-direction: column;
  padding-left: 22rpx;
  padding-right: 22rpx;
  align-content:center;
  justify-content:space-around;
}

.title {
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.title text {
  font-family: sans-serif;
  font-size: 34rpx;
  font-weight: bold;
}

.content text {
  font-family: sans-serif;
  font-size: 28rpx;
}