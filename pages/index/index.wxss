/**index.wxss**/

.root_container {
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  align-items: center;
  box-sizing: border-box;
  padding: 10rpx;
}

.row_item {
  display: flex;
  flex-direction: row;
  padding-left: 16rpx;
  padding-bottom: 22rpx;
  padding-right: 26rpx;
  align-content:center;
  justify-content:space-around;
  width:100%;
}

.left_panel {
  width: 500rpx;
  margin-right: 10rpx;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 26rpx;
  font-family: sans-serif;
  margin-left: 8rpx;
  margin-bottom: 16rpx;
  display: block;
  overflow: hidden;
  width: 500rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #353535;
}

.price {
  margin-bottom: 16rpx;
  display: flex;
  flex-direction: row;
}

.price .image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 2rpx;
}

.price .text {
  font-size: 24rpx;
  color: #46B3FB;
}

.detail {
  margin-bottom: 12rpx;
  display: flex;
  flex-direction: row;
}

.location {
  margin-right: 116rpx;
  display: flex;
  flex-direction: row;
}

.location .image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 2rpx;
}

.location .text {
  font-size: 24rpx;
  color: #888888;
}

.time_modified {
  display: flex;
  flex-direction: row;
}

.time_modified .image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 2rpx;
}

.time_modified .text {
  font-size: 24rpx;
  color: #888888;
}

.root_container .right_panel {
  display: flex;
  align-items: center;
  justify-content: center;
}

.right_panel .image {
  width: 184rpx;
}