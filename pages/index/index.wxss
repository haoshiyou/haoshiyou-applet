/**index.wxss**/
@import "listing.wxss";

page, #root-container {
  height: 100%;
}

#tab-bar {
  height: 80rpx;
  background-color: #21b3fe;
  color: #fff;
  font-size: 14px;
  align-items: center;
  justify-content: space-around;
  position: relative;
}

.tab-item {
  width: 120rpx;
  text-align: center;
  font-weight: 400;
}

.tab-item-active {
  width: 120rpx;
  text-align: center;
  color: #fff;
  font-weight: bold;
}

#tab-indicator {
  position: absolute;
  width: 0rpx;
  height: 6rpx;
  background-color: #fff;
  bottom: 0;
  left: 0;
}

.swiper {
  flex: 1;
  justify-content:space-around;
  align-items: center;
  box-sizing: border-box;
  margin-top: 5px;
}

.scroll-view {
  height: 100%;
}

.row-item {
  align-content: center;
  justify-content: space-around;
  width: 100%;
}
